	    from HS_User user
	    LEFT JOIN department on 1=1 and department.id=user.departmentId
		LEFT JOIN HS_UserRole HUR ON HUR.FK_UserID = user.id
		LEFT JOIN HS_Role HR on HR.id=HUR.FK_RoleID
	    where 1=1 and state='1'
